
@using Biskfarm.DAL.Model
@model List<RDS_Hierarchy>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card-body">
                <button type="button" id="btnNew" class="btn btn-secondary">Add New</button>
            </div>
            <div class="col-12">
                <div class="card card-warning col-sm-6" id="createContainer">
                    
                    <!-- /.card-body -->
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Hierarchy Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @if (Model.Count != 0)
                                    {
                                        foreach (var m in Model)
                                        {
                                            <td>@m.hierarchyName</td>
                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Hierarchy Level</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
