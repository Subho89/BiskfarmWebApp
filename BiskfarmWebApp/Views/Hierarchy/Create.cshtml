@{
    Layout = "~/Views/Shared/_LayoutForms.cshtml";
    //Layout = null;
}

<section class="content">

<div class="col-md-12" style="margin-bottom:10px;margin-top:10px">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Create Hierarchy</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form role="form" class="parsley-examples" id="hierarchyCreate">
                <div class="form-group row">
                    <label>Enter Hierarchy Level</label>
                    <input type="text" class="form-control" placeholder="Enter Hierarchy Level" id="hierarchyName" name="hierarchyName">
                </div>               
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <button type="button" id="btnSave" class="btn btn-primary waves-effect waves-light mr-1">
                            Submit
                        </button>
                        <button type="reset" id="btnCancel"
                                class="btn btn-secondary waves-effect">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


</section>


@section Scripts {
<script>
        $("#btnSave").click(function () {
            console.log($("#hierarchyCreate").serialize());
            $.ajax({
                type: "POST",
                url: '/Hierarchy/Create',
                data: $("#hierarchyCreate").serialize()
            })
                .done(function (response) {
                    alert("Hierarchy Level saved.");
                    $("#hierarchyName").val("");
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("fail");
                });


        });

        $("#btnCancel").click(function () {
            $("#hierarchyName").val("");
        })
</script>
}