@{
	Layout = null;
}
<!doctype html>
<html lang="en">
<head>
	<title>Welcome to PURNATA</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="Login/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(Login/images/bgBis.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Sign In To PURNATA</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Login</h3>
						<form id="signInForm" class="signin-form">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Username" id="userId" name="userId" required>
							</div>
							<div class="form-group">
								<input id="password-field" type="password" class="form-control" placeholder="Password" id="password" name="password" required>
								<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								<button type="button" id="btnSignIn" class="form-control btn btn-primary submit px-3">Sign In</button>
							</div>							
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="Login/js/jquery.min.js"></script>
	<script src="Login/js/popper.js"></script>
	<script src="Login/js/bootstrap.min.js"></script>
	<script src="Login/js/main.js"></script>

</body>
</html>
<script>
	$("#btnSignIn").click(function () {
		$.ajax({
			type: "POST",
			url: '/Account/Login',
			data: $("#signInForm").serialize()
		})
			.done(function (response) {
				if (response == "Success") {
					window.location.href = "RDSuperProfile";
				}
				else {
					alert(response);
				}
				
				// if (response == "Data Saved") {
				// 	$('#business')[0].reset();
				// }

			})
			.fail(function (XMLHttpRequest, textStatus, errorThrown) {
				alert("fail");
			});
	})
</script>

